{
  "designSystem": {
    "name": "Mobile Game UI Design System",
    "version": "1.0.0",
    "type": "gaming_interface",
    "platform": "mobile_ios_android"
  },
  "colorPalette": {
    "primary": {
      "background": {
        "base": "#0A1628",
        "secondary": "#1A2B3D",
        "accent": "#2A3B4E"
      },
      "blue": {
        "primary": "#4A9EFF",
        "secondary": "#5CB3FF",
        "accent": "#6BC8FF"
      },
      "purple": {
        "primary": "#8B5CF6",
        "secondary": "#A78BFA",
        "accent": "#C4B5FD"
      },
      "green": {
        "primary": "#22C55E",
        "secondary": "#4ADE80",
        "accent": "#86EFAC"
      },
      "orange": {
        "primary": "#FB923C",
        "secondary": "#FDBA74",
        "accent": "#FED7AA"
      },
      "pink": {
        "primary": "#EC4899",
        "secondary": "#F472B6",
        "accent": "#F9A8D4"
      }
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#CBD5E1",
      "accent": "#94A3B8"
    },
    "status": {
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "SF Pro Display, -apple-system, BlinkMacSystemFont, sans-serif",
      "secondary": "Inter, system-ui, sans-serif"
    },
    "scales": {
      "hero": {
        "fontSize": "32px",
        "fontWeight": "800",
        "lineHeight": "1.1",
        "letterSpacing": "-0.02em"
      },
      "title": {
        "fontSize": "24px",
        "fontWeight": "700",
        "lineHeight": "1.2",
        "letterSpacing": "-0.01em"
      },
      "subtitle": {
        "fontSize": "18px",
        "fontWeight": "600",
        "lineHeight": "1.3"
      },
      "body": {
        "fontSize": "16px",
        "fontWeight": "500",
        "lineHeight": "1.4"
      },
      "caption": {
        "fontSize": "14px",
        "fontWeight": "400",
        "lineHeight": "1.4"
      },
      "small": {
        "fontSize": "12px",
        "fontWeight": "500",
        "lineHeight": "1.3"
      }
    }
  },
  "spacing": {
    "scale": "4px",
    "values": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "2xl": "32px",
      "3xl": "48px"
    }
  },
  "borderRadius": {
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "20px",
    "2xl": "24px",
    "full": "9999px"
  },
  "shadows": {
    "soft": "0 2px 8px rgba(0, 0, 0, 0.15)",
    "medium": "0 4px 16px rgba(0, 0, 0, 0.2)",
    "strong": "0 8px 32px rgba(0, 0, 0, 0.3)",
    "glow": "0 0 20px rgba(74, 158, 255, 0.4)"
  },
  "components": {
    "card": {
      "structure": {
        "container": {
          "backgroundColor": "linear-gradient(135deg, background.secondary, background.accent)",
          "borderRadius": "borderRadius.lg",
          "padding": "spacing.lg",
          "boxShadow": "shadows.medium",
          "border": "1px solid rgba(255, 255, 255, 0.1)"
        },
        "backdrop": {
          "backdropFilter": "blur(10px)",
          "background": "rgba(26, 43, 61, 0.8)"
        }
      },
      "variants": {
        "primary": {
          "background": "linear-gradient(135deg, #1A2B3D, #2A3B4E)",
          "border": "1px solid rgba(74, 158, 255, 0.2)"
        },
        "accent": {
          "background": "linear-gradient(135deg, #2A3B4E, #3A4B5E)",
          "border": "1px solid rgba(139, 92, 246, 0.3)"
        },
        "success": {
          "background": "linear-gradient(135deg, #1A2B3D, #22543D)",
          "border": "1px solid rgba(34, 197, 94, 0.3)"
        }
      }
    },
    "button": {
      "structure": {
        "base": {
          "borderRadius": "borderRadius.xl",
          "padding": "spacing.md spacing.xl",
          "fontWeight": "typography.scales.body.fontWeight",
          "fontSize": "typography.scales.body.fontSize",
          "transition": "all 0.2s ease-in-out",
          "border": "none",
          "cursor": "pointer"
        }
      },
      "variants": {
        "primary": {
          "background": "linear-gradient(135deg, #4A9EFF, #5CB3FF)",
          "color": "text.primary",
          "boxShadow": "0 4px 12px rgba(74, 158, 255, 0.3)",
          "hover": {
            "transform": "translateY(-2px)",
            "boxShadow": "0 6px 16px rgba(74, 158, 255, 0.4)"
          }
        },
        "secondary": {
          "background": "linear-gradient(135deg, #8B5CF6, #A78BFA)",
          "color": "text.primary",
          "boxShadow": "0 4px 12px rgba(139, 92, 246, 0.3)"
        },
        "success": {
          "background": "linear-gradient(135deg, #22C55E, #4ADE80)",
          "color": "text.primary",
          "boxShadow": "0 4px 12px rgba(34, 197, 94, 0.3)"
        },
        "ghost": {
          "background": "rgba(255, 255, 255, 0.1)",
          "color": "text.secondary",
          "border": "1px solid rgba(255, 255, 255, 0.2)"
        }
      },
      "sizes": {
        "small": {
          "padding": "spacing.sm spacing.md",
          "fontSize": "typography.scales.small.fontSize"
        },
        "medium": {
          "padding": "spacing.md spacing.lg",
          "fontSize": "typography.scales.body.fontSize"
        },
        "large": {
          "padding": "spacing.lg spacing.xl",
          "fontSize": "typography.scales.subtitle.fontSize"
        }
      }
    },
    "statCard": {
      "structure": {
        "container": {
          "background": "linear-gradient(135deg, background.secondary, background.accent)",
          "borderRadius": "borderRadius.lg",
          "padding": "spacing.lg",
          "display": "flex",
          "alignItems": "center",
          "gap": "spacing.md"
        },
        "icon": {
          "width": "24px",
          "height": "24px",
          "borderRadius": "borderRadius.sm"
        },
        "content": {
          "display": "flex",
          "flexDirection": "column"
        },
        "value": {
          "fontSize": "typography.scales.title.fontSize",
          "fontWeight": "typography.scales.title.fontWeight",
          "color": "text.primary"
        },
        "label": {
          "fontSize": "typography.scales.small.fontSize",
          "color": "text.secondary"
        }
      }
    },
    "progressBar": {
      "structure": {
        "container": {
          "width": "100%",
          "height": "6px",
          "backgroundColor": "rgba(255, 255, 255, 0.1)",
          "borderRadius": "borderRadius.full",
          "overflow": "hidden"
        },
        "fill": {
          "height": "100%",
          "borderRadius": "borderRadius.full",
          "transition": "width 0.3s ease-in-out"
        }
      },
      "variants": {
        "primary": {
          "background": "linear-gradient(90deg, #4A9EFF, #5CB3FF)"
        },
        "success": {
          "background": "linear-gradient(90deg, #22C55E, #4ADE80)"
        },
        "warning": {
          "background": "linear-gradient(90deg, #F59E0B, #FB923C)"
        }
      }
    },
    "badge": {
      "structure": {
        "container": {
          "display": "inline-flex",
          "alignItems": "center",
          "padding": "spacing.xs spacing.sm",
          "borderRadius": "borderRadius.full",
          "fontSize": "typography.scales.small.fontSize",
          "fontWeight": "typography.scales.small.fontWeight"
        }
      },
      "variants": {
        "primary": {
          "background": "linear-gradient(135deg, #4A9EFF, #5CB3FF)",
          "color": "text.primary"
        },
        "secondary": {
          "background": "rgba(255, 255, 255, 0.1)",
          "color": "text.secondary",
          "border": "1px solid rgba(255, 255, 255, 0.2)"
        },
        "success": {
          "background": "linear-gradient(135deg, #22C55E, #4ADE80)",
          "color": "text.primary"
        }
      }
    },
    "bottomNavigation": {
      "structure": {
        "container": {
          "position": "fixed",
          "bottom": "0",
          "left": "0",
          "right": "0",
          "background": "linear-gradient(180deg, transparent, rgba(10, 22, 40, 0.95))",
          "backdropFilter": "blur(20px)",
          "padding": "spacing.md spacing.lg spacing.xl",
          "borderTop": "1px solid rgba(255, 255, 255, 0.1)"
        },
        "items": {
          "display": "flex",
          "justifyContent": "space-around",
          "alignItems": "center"
        },
        "item": {
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "gap": "spacing.xs",
          "padding": "spacing.sm",
          "borderRadius": "borderRadius.md",
          "transition": "all 0.2s ease-in-out"
        },
        "icon": {
          "width": "24px",
          "height": "24px"
        },
        "label": {
          "fontSize": "typography.scales.small.fontSize",
          "color": "text.secondary"
        }
      },
      "states": {
        "active": {
          "background": "rgba(74, 158, 255, 0.2)",
          "color": "blue.primary"
        },
        "inactive": {
          "color": "text.secondary"
        }
      }
    }
  },
  "layoutPatterns": {
    "mobileScreen": {
      "container": {
        "minHeight": "100vh",
        "backgroundColor": "background.base",
        "padding": "spacing.lg",
        "paddingTop": "spacing.3xl"
      },
      "header": {
        "display": "flex",
        "justifyContent": "space-between",
        "alignItems": "center",
        "marginBottom": "spacing.xl"
      },
      "content": {
        "flex": "1",
        "display": "flex",
        "flexDirection": "column",
        "gap": "spacing.lg"
      }
    },
    "cardGrid": {
      "display": "grid",
      "gridTemplateColumns": "repeat(auto-fit, minmax(280px, 1fr))",
      "gap": "spacing.lg"
    },
    "statsList": {
      "display": "flex",
      "flexDirection": "column",
      "gap": "spacing.md"
    }
  },
  "animations": {
    "fadeIn": {
      "keyframes": {
        "from": {
          "opacity": "0",
          "transform": "translateY(20px)"
        },
        "to": {
          "opacity": "1",
          "transform": "translateY(0)"
        }
      },
      "duration": "0.3s",
      "easing": "ease-out"
    },
    "scaleIn": {
      "keyframes": {
        "from": {
          "transform": "scale(0.9)",
          "opacity": "0"
        },
        "to": {
          "transform": "scale(1)",
          "opacity": "1"
        }
      },
      "duration": "0.2s",
      "easing": "ease-out"
    },
    "slideUp": {
      "keyframes": {
        "from": {
          "transform": "translateY(100%)"
        },
        "to": {
          "transform": "translateY(0)"
        }
      },
      "duration": "0.3s",
      "easing": "ease-out"
    },
    "glow": {
      "keyframes": {
        "0%, 100%": {
          "boxShadow": "0 0 20px rgba(74, 158, 255, 0.4)"
        },
        "50%": {
          "boxShadow": "0 0 30px rgba(74, 158, 255, 0.6)"
        }
      },
      "duration": "2s",
      "easing": "ease-in-out",
      "iterationCount": "infinite"
    }
  },
  "designPrinciples": {
    "glassomorphism": {
      "description": "Use backdrop-filter blur effects with semi-transparent backgrounds",
      "implementation": "backdrop-filter: blur(10px); background: rgba(26, 43, 61, 0.8);"
    },
    "gradients": {
      "description": "Prefer linear gradients over solid colors for depth",
      "implementation": "Use 135deg angle for diagonal gradients, combine similar hues"
    },
    "elevation": {
      "description": "Use shadows and transforms to create depth hierarchy",
      "implementation": "Combine box-shadow with subtle transforms on hover"
    },
    "colorHarmony": {
      "description": "Maintain consistent color relationships across components",
      "implementation": "Use color.primary for actions, color.secondary for information"
    },
    "responsiveness": {
      "description": "Mobile-first approach with touch-friendly sizing",
      "implementation": "Minimum 44px touch targets, appropriate spacing for thumbs"
    }
  },
  "usageGuidelines": {
    "componentComposition": {
      "description": "Combine components using the layout patterns",
      "example": "mobileScreen + cardGrid + statCard for dashboard layouts"
    },
    "colorApplication": {
      "description": "Use primary colors for actions, secondary for information, accent for highlights",
      "hierarchy": "primary > secondary > accent"
    },
    "spacing": {
      "description": "Use consistent spacing scale, prefer spacing.lg for component gaps",
      "recommendation": "Maintain 16px minimum between interactive elements"
    },
    "typography": {
      "description": "Use typography scales consistently, prefer subtitle for section headers",
      "hierarchy": "hero > title > subtitle > body > caption > small"
    }
  }
}
