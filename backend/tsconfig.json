{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/common/*": ["../common/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "../common/**/*.ts"],
  "exclude": ["node_modules"]
}
